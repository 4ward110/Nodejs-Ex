extends ../layout/local.pug
block content   
    h1 Login
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/auth/login", method="post")
        .form-group
            label(for="name") Email
            input#name.form-control(name="email" type="email", value=values ? values.email : "")
        .form-group
            label(for="password") Phone
            input#phone.form-control(name="password" type="password", value=values ? values.password : "")
        button.btn.btn-primary Login